# .gitattributes for WOW Pack - Normalize EOL and mark binaries
*                 text=auto eol=lf

# Windows scripts that really want CRLF
*.bat             text eol=crlf
*.cmd             text eol=crlf
*.ps1             text eol=crlf
*.psm1            text eol=crlf

# Project sources (LF)
*.ts              text eol=lf
*.tsx             text eol=lf
*.js              text eol=lf
*.svelte          text eol=lf
*.wgsl            text eol=lf
*.py              text eol=lf
*.json            text eol=lf
*.md              text eol=lf
*.yml             text eol=lf
*.yaml            text eol=lf
*.sh              text eol=lf
*.css             text eol=lf
*.html            text eol=lf

# Text HLS playlists
*.m3u8            text eol=lf

# Binary media
*.mov             binary
*.mp4             binary
*.m4s             binary
*.png             binary
*.jpg             binary
*.jpeg            binary
*.webp            binary
*.gif             binary
*.ico             binary
*.svg             text eol=lf
*.webp            binary
*.avif            binary
*.bmp             binary
*.tiff            binary
*.tif             binary

# Fonts
*.ttf             binary
*.otf             binary
*.woff            binary
*.woff2           binary
*.eot             binary

# Audio/Video
*.mp3             binary
*.ogg             binary
*.ogv             binary
*.wav             binary
*.flac            binary
*.aac             binary
*.m4a             binary
*.avi             binary
*.wmv             binary
*.mkv             binary

# Documents
*.pdf             binary
*.doc             binary
*.docx            binary
*.xls             binary
*.xlsx            binary
*.ppt             binary
*.pptx            binary

# Archives
*.zip             binary
*.tar             binary
*.gz              binary
*.bz2             binary
*.xz              binary
*.rar             binary
*.7z              binary

# Executables
*.exe             binary
*.dll             binary
*.so              binary
*.dylib           binary

# Machine Learning Models
*.pt              binary
*.pth             binary
*.bin             binary
*.safetensors     binary
*.onnx            binary
*.h5              binary
*.pkl             binary
*.model           binary
*.ckpt            binary

# Database files
*.db              binary
*.sqlite          binary
*.sqlite3         binary

# LFS tracking (when enabled)
*.mp4             filter=lfs diff=lfs merge=lfs -text
*.mov             filter=lfs diff=lfs merge=lfs -text
