{
  "name": "tori-hologram-mobile",
  "version": "1.0.0",
  "description": "TORI Hologram Mobile App - Spectral phase-field holographic viewer",
  "main": "index.js",
  "scripts": {
    "build": "vite build --mode mobile",
    "build:android": "npm run build && cap sync android && cap copy android",
    "build:ios": "npm run build && cap sync ios && cap copy ios",
    "android": "cap open android",
    "ios": "cap open ios",
    "serve": "vite preview --port 5173",
    "dev": "vite --port 5173 --mode mobile",
    "sync": "cap sync",
    "copy": "cap copy",
    "update": "cap update",
    "lint": "eslint src --ext .ts,.tsx,.svelte",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@capacitor/android": "^5.6.0",
    "@capacitor/app": "^5.0.6",
    "@capacitor/core": "^5.6.0",
    "@capacitor/haptics": "^5.0.6",
    "@capacitor/ios": "^5.6.0",
    "@capacitor/local-notifications": "^5.0.6",
    "@capacitor/network": "^5.0.6",
    "@capacitor/splash-screen": "^5.0.6",
    "@capacitor/status-bar": "^5.0.6",
    "@msgpack/msgpack": "^3.0.0-beta2",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-trace-web": "^1.19.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.46.0",
    "simple-peer": "^9.11.1",
    "idb": "^8.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.6.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "@types/simple-peer": "^9.11.8",
    "@types/webgpu": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-compression": "^0.5.1"
  },
  "browserslist": [
    "Chrome >= 124",
    "Safari >= 17",
    "iOS >= 17",
    "ChromeAndroid >= 124"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
