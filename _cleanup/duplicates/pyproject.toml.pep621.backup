[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "tori-kha"
version = "0.9.6"
description = "TORI Knowledge Harmonization Architecture - A multi-modal cognitive system"
readme = "README.md"
requires-python = ">=3.8"
authors = [
    {name = "TORI Team"},
]
license = {text = "MIT"}
classifiers = [
    "Development Status :: 4 - Beta",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: MIT License",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.8",
    "Programming Language :: Python :: 3.9",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
]

dependencies = [
    # Core dependencies
    "fastapi>=0.104.0",
    "uvicorn>=0.24.0",
    "pydantic>=2.0.0",
    "numpy>=1.24.0",
    "scipy>=1.10.0",
    "scikit-learn>=1.3.0",
    
    # PDF processing
    "pypdf2>=3.0",
    
    # API and networking
    "httpx>=0.25.0",
    "sse-starlette>=1.8,<2",
    "python-multipart",
    "aiofiles>=23.0",
    
    # Utilities
    "python-dotenv>=1.0.0",
    "psutil>=5.9.0",
    "requests",
    
    # Data processing
    "pandas>=2.0.0",
    "deepdiff>=6.7",
]

[project.optional-dependencies]
dev = [
    # Build / packaging
    "maturin>=1.5",
    "setuptools>=61.0",
    "wheel",
    
    # Document extraction
    "yake>=0.4",
    "keybert",
    "sentence-transformers",
    "spacy>=3.7",
    # "entropy-prune>=0.2",  # Commented out - use TORI_DISABLE_ENTROPY_PRUNE=1 instead
    
    # OCR (optional)
    "pytesseract",
    "pdf2image",
    "pillow",
    
    # Testing
    "pytest>=7.4.0",
    "pytest-asyncio>=0.21.0",
    "pytest-cov",
    
    # Code quality
    "black",
    "ruff",
    "pre-commit",
    
    # Additional tools
    "reportlab>=3.6",
]

ml = [
    "torch>=2.0.0",
    "transformers>=4.35.0",
]

mcp = [
    "mcp>=1.0.0",
    "fastmcp>=0.1.0",
]

[project.urls]
"Homepage" = "https://github.com/yourusername/tori-kha"
"Bug Tracker" = "https://github.com/yourusername/tori-kha/issues"

[project.scripts]
tori = "enhanced_launcher:main"
tori-api = "prajna.api.prajna_api:main"

[tool.setuptools]
packages = ["concept_mesh", "ingest_pdf", "prajna", "python"]
include-package-data = true

[tool.setuptools.package-data]
"*" = ["*.json", "*.yaml", "*.yml", "*.txt", "*.md"]

[tool.black]
line-length = 100
target-version = ['py38']

[tool.ruff]
line-length = 100
select = ["E", "F", "W", "I", "N"]
ignore = ["E501"]

[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py", "*_test.py"]
addopts = "-v --tb=short"
