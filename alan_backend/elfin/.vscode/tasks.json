{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "elfin:check-units",
      "type": "shell",
      "command": "elfin check-units ${file} --plain",
      "problemMatcher": {
        "owner": "elfin",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.+):(\\d+):(\\d+) \\[(warning|error)(?: [A-Z_]+)?\\] (.+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ]
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "clear": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
