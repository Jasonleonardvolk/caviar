{
  "name": "tori-project",
  "version": "1.0.0",
  "type": "module",
  "description": "TORI Holographic System",
  "scripts": {
    "build-tests": "node ./scripts/build-tests.mjs",
    "tests:quilt": "npm run shaders:sync && npm run build-tests && vite",
    "quilt:bundle": "node scripts/generate-shader-bundle.mjs",
    "floater:build": "npm run shaders:sync && node ./scripts/build_floater.mjs",
    "floater:pack": "npm run floater:build && node ./scripts/pack_floater.mjs",
    "floater:test": "npm run build-tests",
    "predev": "node tools/runtime/preflight.mjs",
    "prebuild": "node tools/runtime/preflight.mjs",
    "backend": "python enhanced_launcher.py",
    "bundle-shaders": "npx tsx scripts/bundleShaders.ts",
    "build": "npm --prefix tori_ui_svelte run build",
    "clean:all": "npm run clean:ports && npm --prefix tori_ui_svelte run clean:svelte",
    "clean:ports": "python cleanup_ports.py",
    "dev": "npm run clean:ports && npm-run-all --parallel backend frontend",
    "frontend": "npm --prefix tori_ui_svelte run dev",
    "paradiso": "powershell -ExecutionPolicy Bypass -File tools/release/crown_paradiso.ps1",
    "shaders:canonical": "node tools/shaders/promote_to_canonical.mjs",
    "shaders:check": "npm run shaders:guard:all && npm run shaders:validate:smart",
    "shaders:ci": "npm run shaders:sync && npm run shaders:guard:all && npm run shaders:gate:smart",
    "shaders:dedupe": "node tools/shaders/dedupe_shaders_v2.mjs",
    "shaders:fix": "npm run shaders:sync && npm run shaders:test",
    "shaders:fix:all": "node tools/shaders/fixes/fix_all.mjs",
    "shaders:fix:bounds": "node tools/shaders/fixes/fix_bounds_checking.mjs",
    "shaders:fix:const": "node tools/shaders/fixes/fix_const_let.mjs",
    "shaders:fix:vec3": "node tools/shaders/fixes/fix_vec3_alignment.mjs",
    "shaders:gate": "node tools/shaders/shader_quality_gate_v2.mjs --strict",
    "shaders:gate:desktop": "node tools/shaders/validate_and_report.mjs --dir=frontend/lib/webgpu/shaders --limits=tools/shaders/device_limits/desktop.json --targets=naga --strict",
    "shaders:gate:iphone": "node tools/shaders/shader_quality_gate_v2.mjs --dir=frontend/lib/webgpu/shaders --limits=tools/shaders/device_limits/iphone15.json --targets=naga --strict",
    "shaders:gate:low": "node tools/shaders/validate_and_report.mjs --dir=frontend/lib/webgpu/shaders --limits=tools/shaders/device_limits/desktop_low.json --targets=naga --strict",
    "shaders:gate:latest": "node tools/shaders/validate_and_report.mjs --dir=frontend/lib/webgpu/shaders --limits=latest --targets=naga --strict",
    "shaders:check:latest": "node tools/shaders/shader_quality_gate_v2.mjs --dir=frontend/lib/webgpu/shaders --limits=latest --strict",
    "shaders:gate:smart": "node tools/shaders/shader_quality_gate_v2_enhanced.mjs --dir=frontend/lib/webgpu/shaders --suppressions=tools/shaders/validator_suppressions.json --strict",
    "dev:limits": "node tools/dev/limits_server.mjs",
    "dev:limits:enhanced": "node tools/dev/limits_server_enhanced.mjs",
    "dev:limits:v2": "node tools/dev/limits_server_enhanced_v2.mjs",
    "limits:check": "node tools/shaders/lib/validate_limits_cli.mjs",
    "shaders:validate:v2": "node tools/shaders/validate_and_report_v2.mjs --dir=frontend/lib/webgpu/shaders",
    "shaders:gate:v2": "node tools/shaders/shader_quality_gate_v2_unified.mjs --dir=frontend/lib/webgpu/shaders --strict",
    "shaders:guard": "node tools/shaders/guards/check_uniform_arrays.mjs",
    "shaders:guard:all": "npm run shaders:guard && npm run shaders:guard:vec3",
    "shaders:guard:vec3": "node tools/shaders/guards/verify_no_storage_vec3.mjs",
    "shaders:lethe": "node tools/shaders/lethe_reindex_reports.mjs",
    "shaders:report": "node tools/shaders/show_report.mjs",
    "shaders:summon": "node tools/shaders/virgil_summon.mjs",
    "shaders:sync": "node tools/shaders/copy_canonical_to_public.mjs",
    "shaders:test": "node tools/shaders/test_suppression_system.mjs",
    "shaders:validate": "node tools/shaders/validate_and_report.mjs --dir=frontend/lib/webgpu/shaders",
    "shaders:validate:all": "npm run shaders:gate:low && npm run shaders:gate:desktop && npm run shaders:gate:iphone",
    "shaders:validate:smart": "node tools/shaders/shader_quality_gate_v2_enhanced.mjs --dir=frontend/lib/webgpu/shaders --suppressions=tools/shaders/validator_suppressions.json",
    "start-fresh": "npm run clean:ports && npm run dev",
    "validate:enhanced": "node tools/validate_enhanced_files.mjs",
    "virgil": "node tools/shaders/virgil_summon.mjs --strict",
    "type-check": "npx tsc --noEmit",
    "type-check:all": "npm run type-check:frontend && npm run type-check:svelte",
    "type-check:frontend": "cd frontend && npx tsc --noEmit",
    "type-check:svelte": "cd tori_ui_svelte && npx svelte-check"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/webxr": "^0.5.22",
    "@webgpu/types": "^0.1.64",
    "esbuild": "^0.21.4",
    "globby": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "svelte": "^5.38.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vite": "^5.4.19"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tori-system/tori.git"
  },
  "keywords": [
    "holographic",
    "visualization",
    "ai",
    "cognitive",
    "webgpu"
  ],
  "author": "TORI Team",
  "license": "MIT",
  "dependencies": {
    "@gltf-transform/core": "^4.2.1",
    "@gltf-transform/functions": "^4.2.1",
    "onnxruntime-web": "^1.22.0"
  }
}
